pipeline {

  agent {
  kubernetes {
   // cloud 'dev-cloud'
   // label "dev-agent-${env.BUILD_NUMBER}"
    slaveConnectTimeout 300
    idleMinutes 5
    yamlFile "pod.yaml"
    podRetention 'Never()'
  }
}

  stages {
    stage ("Provision dev agent") {

      steps {
        container('nginx') {
        echo POD_CONTAINER // displays 'busybox'
        sh 'hostname'
      }
      }

    }

  }
}
